<html>
<head>
<meta charset="ISO-8859-1">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="css/main.css">
<title>Asiakkaiden listaus</title>
</head>
<body>
	<span id="ilmo"></span>
	<table id="listaus">
		<thead>	
			<tr>
				<th colspan="5" class="oikealle"><span id="uusiAsiakas">Lis‰‰ uusi asiakas</span></th>
			</tr>
			<tr>
				<th colspan="3" class="oikealle">Hakusana:</th>
				<th><input type="text" id="hakusana"></th>
				<th><input type="button" id="hae" value="Hae"></th>
			</tr>		
			<tr>
				<th>Etunimi</th>
				<th>Sukunimi</th>
				<th>Puhelin</th>
				<th>Sposti</th>	
				<th></th>			
			</tr>
		</thead>
		<tbody>
		</tbody>
	</table>
<script>
$(document).ready(function(){
	
	$("#uusiAsiakas").click(function(){
		document.location="lisaaasiakas.jsp";
	});
	
	$(document.body).on("keydown", function(event){
		  if(event.which==13){ //Enteri‰ painettu, ajetaan haku
			  haeTiedot();
		  }
	});
	
	$("#hae").click(function(){	
		haeTiedot();
	});	
});

function haeTiedot(){	
	$("#listaus tbody").empty();
	$.getJSON({url:"asiakkaat/"+$("#hakusana").val(), success:function(result){		
		$.each(result.asiakkaat, function(i, field){  
        	var htmlStr;
        	htmlStr+="<tr id='rivi_"+field.asiakas_id+"'>";
        	htmlStr+="<td>"+field.etunimi+"</td>";
        	htmlStr+="<td>"+field.sukunimi+"</td>";
        	htmlStr+="<td>"+field.puhelin+"</td>";
        	htmlStr+="<td>"+field.sposti+"</td>";  
        	htmlStr+="<td><a href='muutaasiakas.jsp?asiakas_id="+field.asiakas_id+"'>Muuta</a>&nbsp;";
        	htmlStr+="<span class='poista' onclick=poista("+field.asiakas_id+",'"+field.etunimi+" "+field.sukunimi+"')>Poista</span></td>";
        	htmlStr+="</tr>";
        	$("#listaus tbody").append(htmlStr);
        });
    }});	
}

function poista(asiakas_id, nimi){
	if(confirm("Poista asiakas " + nimi + "?")){
		console.log("moi " +asiakas_id);
		$.post({url:"PoistaAsiakas", data:{asiakas_id: asiakas_id}, success:function(result) {  //Tiedot kulkevat palvelimelle POST-metodilla
	        console.log(result);
			if(result==0){
	        	$("#ilmo").html("Asiakkaan poisto ep‰onnistui.");
	        }else if(result==1){
	        	$("#rivi_"+asiakas_id).css("background-color", "red"); //V‰rj‰t‰‰n poistetun auton rivi
	        	alert("Asiakkaan "+ asiakas_id +" poisto onnistui.");
				haeTiedot();        	
			}
	    }});
	}
	
}
</script>
</body>
</html>